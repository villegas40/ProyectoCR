@model CasasRed_Nuevo3_.Models.CasaInventario

@{
    ViewBag.Title = "Habilitación > Editar asignación de material";
    string maximo = ViewBag.Max;
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
<div class="form-horizontal">
    <h4>Editar</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ci_Id)

    <div >
            @Html.EditorFor(model => model.ci_corretaje_id, new { htmlAttributes = new { @style = "display:none;" } })
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Artículo</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ci_articulo_id, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Cantidad</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ci_cantidadAsignada, new { htmlAttributes = new { @type="number", @class = "form-control", @min = "1", @max = maximo } })
            @Html.ValidationMessageFor(model => model.ci_cantidadAsignada, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Fecha asignada</label>
        <div class="col-md-10">
            <label class="control-label">@Model.ci_fecha.ToShortDateString()</label>
            @Html.EditorFor(model => model.ci_fecha, new { htmlAttributes = new { @style = "display:none;" } })
        </div>
    </div>
    @Html.EditorFor(model => model.ci_usuario_id, new { htmlAttributes = new { @style = "display:none;" } })
</div>
    <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" onclick="document.getElementById('ci_articulo_id').removeAttribute('disabled')" value="Guardar" class="btn btn-success" /> | @Html.ActionLink("Regresar", "Index", new { id = Model.ci_corretaje_id }, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    }