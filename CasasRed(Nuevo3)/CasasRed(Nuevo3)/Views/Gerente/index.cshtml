@model CasasRed_Nuevo3_.Controllers.GerenteController.FooViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="container">
    <div class="row">
        <div class="col-sm">
        <a>Ordenar por:</a>
        </div>
       <div class="col-sm">
        <div class="btn-group">
            <button class="btn btn-secondary btn-sm dropdown-toggle btn-outline-dark float-left" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 31px, 0px); top: 0px; left: 0px; will-change: transform;">
             <a class="dropdown-item" href="#">Mas vieja mas nueva</a>
             </div>
        </div>
      </div>
        <div class="col-sm">
            <a>Mostrar:</a>
        </div>
        <div class="col-sm">
            <div class="btn-group">
                <button class="btn btn-secondary btn-sm dropdown-toggle btn-outline-dark float-left " type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  
                </button>

                <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 31px, 0px); top: 0px; left: 0px; will-change: transform;">
                    <a class="dropdown-item" href="#">Todas</a>
                    <a class="dropdown-item" href="#">Vendidas</a>
                    <a class="dropdown-item" href="#">En proceso</a>
                    <a class="dropdown-item" href="#">No vendidas</a>
                </div>
            </div>
        </div>
    </div>
   </div>
    <br />
    <table class="table table-striped table-responsive-lg">
        <thead>
            <tr>
                <th scope="col">Id Casa</th>
                <th scope="col">Dirección</th>
                <th scope="col">Cliente asignado </th>
                <th scope="col">Status</th>
                <th scope="col">Progreso </th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.corretajes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Crt_Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Crt_Cliente_Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Crt_Status) <!--Cambiar, agregar fecha de alta-->
                    </td>
                    <td>
                        <div class="progress">
                            <div id="bar" class="progress-bar progress-bar-striped bg-danger" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                        </div>
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document.body).css('padding-top', '80px');
    </script>
}