
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>



    <!--Footer-->
    <link href="~/Content/customcss/sticky-footer.css" rel="stylesheet" />
    <!--Iconos-->
    <link href="~/Content/fontawsome/css/fontawesome-all.css" rel="stylesheet" />
</head>
<body>

    <style>
        .navbar-default .navbar-toggle.collapsed {
            border-color: white;
        }

        .navbar-default .navbar-toggle {
            border-color: white;

         }

    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent fixed-top">
        <a class="navbar-brand" href="#"><img src="~/Media/logo-casas-red.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Acerca de Nosotros", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li>
                    <a href="#" class="nav-link">Identificate</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <style>
            body {
                background-image: url('/Media/background2.jpg');
                background-repeat: no-repeat;
                background-position: top;
                background-size: 1980px 450px;
            }
        </style>
    </div>
    <div class="container body-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="footer">
        <div class="col-sm-4">
            <p>&copy; @DateTime.Now.Year - Casas Red</p>
        </div>
    </footer>
</body>
</html>
