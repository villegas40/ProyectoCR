@model CasasRed_Nuevo3_.Models.Usuario
@{
    ViewBag.Title = "Iniciar sesión";
    string msg = (ViewBag.MensajeError != null) ? ViewBag.MensajeError : "";
    string usr = ViewBag.usuario;

}

<style>
    .login-form .form-control {
        background: #f7f7f7 none repeat scroll 0 0;
        border: 1px solid #d4d4d4;
        border-radius: 4px;
        font-size: 14px;
        height: 50px;
        line-height: 50px;
    }

    .main-div {
        background: #ffffff none repeat scroll 0 0;
        border-radius: 2px;
        margin: 10px auto 30px;
        max-width: 38%;
        padding: 50px 70px 70px 71px;
    }

    .login-form .form-group {
        margin-bottom: 10px;
    }


    .login-form {
        /*text-align: center;*/
        text-align: left;
        margin-top: 60px;
        /*box-shadow: 0px 0px 10px 1px grey;*/
        padding-bottom: 20px;
        background: white;
    }

        .login-form .btn.btn-primary {
            background: #f0ad4e none repeat scroll 0 0;
            border-color: #f0ad4e;
            color: #ffffff;
            font-size: 14px;
            width: 100%;
            height: 50px;
            line-height: 50px;
            padding: 0;
        }

    .btn-primary {
        background: #721c24 none repeat scroll 0 0;
        border-color: #721c24;
        color: #ffffff;
        font-size: 14px;
        width: 100%;
        height: 50px;
        line-height: 50px;
        padding: 0;
    }

        .btn-primary:hover {
            background: black;
            border-color: black;
        }

    body {
        background-color: #F0F0F0 !important;
    }

    a {
        color: #721c24;
    }

        a:hover {
            color: black;
        }
</style>
<div class="container">
    <div class="login-form col-md-4 offset-md-4" style="border-radius:3%;">
        <h2 class="panel-title text-center">Iniciar sesión</h2>
        <hr />
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#login">Iniciar sesión</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#cliente">Cliente</a>
            </li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div id="login" class="container tab-pane active" style="border-bottom:1px solid #dee2e6; border-left:1px solid #dee2e6; border-right:1px solid #dee2e6; ">
                <br>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <label>@msg</label>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form>
                            <div class="form-group">
                                <label>Usuario</label>
                                <div>
                                    @Html.EditorFor(model => model.usu_username, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.usu_username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <div >
                                    @Html.EditorFor(model => model.usu_password, new { htmlAttributes = new { @class = "form-control", @type = "password", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.usu_password, " ", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
            <div id="cliente" class="container tab-pane fade" style="border-bottom:1px solid #dee2e6; border-left:1px solid #dee2e6; border-right:1px solid #dee2e6;">
                <br>
                @using (Html.BeginForm("ClienteFolio", "Login"))
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <label>@msg</label>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Folio</label>
                                <div>
                                    <input id="Grlal_Folio" name="Grlal_Folio" class="form-control" type="text" required />
                                </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-primary">Consultar</button>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });

        $(document.body).css('padding-top', '70px');

    </script>
}