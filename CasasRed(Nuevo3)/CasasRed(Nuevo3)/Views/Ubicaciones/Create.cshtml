@model CasasRed_Nuevo3_.Models.Ubicaciones

@{
    ViewBag.Title = "Ubicaciones > Crear ubicación";
}

<h2>Crear ubicación</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Código</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ubi_codigo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ubi_codigo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Descripción</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ubi_descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ubi_descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-success" /> | @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>
}

