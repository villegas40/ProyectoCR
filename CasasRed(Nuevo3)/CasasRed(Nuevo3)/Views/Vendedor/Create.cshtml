@model CasasRed_Nuevo3_.Models.Vendedor
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Vendedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <center><h2>Agregar vendedor</h2></center>

    <div class=" container">
        <center>
            <div>
                <label for="nombres">Nombre del asesor</label>
                @Html.EditorFor(model => model.Vndr_Nombre, new { htmlAttributes = new { @class = "form-control data", @id = "nombres" } })
                @Html.ValidationMessageFor(model => model.Vndr_Nombre, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="apellidop">Apellido paterno</label>
                @Html.EditorFor(model => model.Vndr_Apellidopa, new { htmlAttributes = new { @class = "form-control data", @id = "apellidop" } })
                @Html.ValidationMessageFor(model => model.Vndr_Apellidopa, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="apellidom">Apellido materno</label>
                @Html.EditorFor(model => model.Vndr_Apellidoma, new { htmlAttributes = new { @class = "form-control data", @id = "apellidom" } })
                @Html.ValidationMessageFor(model => model.Vndr_Apellidoma, "", new { @class = "text-danger" })

            </div>
            <div class=" d-flex justify-content-end">
                <!--<input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />-->
                <input type="submit" value="Create" class="btn btn-outline-danger btn-lg btn-block" />

            </div>
        </center>
    </div>

    <div>
        @Html.ActionLink("Back to List", "/Vendedor/Index")
    </div>

}