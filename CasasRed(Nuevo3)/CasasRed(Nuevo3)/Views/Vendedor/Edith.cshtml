@model CasasRed_Nuevo3_.Models.Vendedor
@{
    ViewBag.Title = "Edith";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edith", "Vendedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <center>
        <h2>Editar vendedor</h2>



        <div class=" container">
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
            </div>
            <div>
                <label for="nombre">Nombre del asesor</label>
                @Html.EditorFor(model => model.Vndr_Nombre, new { htmlAttributes = new { @class = "form-control data", @id = "nombre" } })
                @Html.ValidationMessageFor(model => model.Vndr_Nombre, "", new { @class = "text-danger" })

            </div>
            <div>
                <label for="apellidop">Apellido paterno</label>

                @Html.EditorFor(model => model.Vndr_Apellidopa, new { htmlAttributes = new { @class = "form-control data", @id = "apellidop" } })
                @Html.ValidationMessageFor(model => model.Vndr_Apellidoma, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="apellidom">Apellido materno</label>
                @Html.EditorFor(model => model.Vndr_Apellidoma, new { htmlAttributes = new { @class = "form-control data", @id = "apellidom" } })
                @Html.ValidationMessageFor(model => model.Vndr_Apellidoma, "", new { @class = "text-danger" })


            </div>
        </div>
        <div class=" d-flex justify-content-end">
            <!--<input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />-->
            <input type="submit" id="enviar" value="Actualizar" class="btn btn-outline-danger btn-lg btn-block" />

        </div>

    </center>
    <div>
        <a href='javascript:history.go(-1)'>Regresar</a>
    </div>
}

